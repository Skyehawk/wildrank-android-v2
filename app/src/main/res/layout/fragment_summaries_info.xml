<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/select_a_team"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="Select a team"
        android:textSize="50sp" />

    <RelativeLayout
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/team_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:orientation="vertical">

            <TextView
                android:id="@+id/team_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="50sp" />

            <TextView
                android:id="@+id/team_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="30sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:layout_below="@id/team_info"
            android:orientation="horizontal"
            android:paddingTop="24dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Pit Data"
                    android:textSize="40sp" />

                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <org.wildstang.wildrank.androidv2.views.TemplatedTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="20sp"
                            app:text="&lt;b>Dimensions (l*w*h):&lt;/b> {{length}} x {{width}} x {{height}}" />

                        <org.wildstang.wildrank.androidv2.views.TemplatedTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="20sp"
                            app:falseString="no"
                            app:text="&lt;b>Bumpers:&lt;/b> {{bumpers}}"
                            app:trueString="yes" />

                        <org.wildstang.wildrank.androidv2.views.TemplatedTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="20sp"
                            app:text="&lt;b>Drivetrain:&lt;/b> {{drivetrain}}" />

                        <org.wildstang.wildrank.androidv2.views.TemplatedTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="20sp"
                            app:falseString="no"
                            app:text="&lt;b>Plays in landfill:&lt;/b> {{landfill}}"
                            app:trueString="yes" />

                        <org.wildstang.wildrank.androidv2.views.TemplatedTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="20sp"
                            app:falseString="no"
                            app:text="&lt;b>Plays at player station:&lt;/b> {{player_station}}"
                            app:trueString="yes" />

                        <org.wildstang.wildrank.androidv2.views.TemplatedTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="20sp"
                            app:falseString="no"
                            app:text="&lt;b>Plays at step:&lt;/b> {{step}}"
                            app:trueString="yes" />

                        <org.wildstang.wildrank.androidv2.views.TemplatedTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="20sp"
                            app:falseString="no"
                            app:text="&lt;b>Manipulates totes:&lt;/b> {{totes}}"
                            app:trueString="yes" />

                        <org.wildstang.wildrank.androidv2.views.TemplatedTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="20sp"
                            app:falseString="no"
                            app:text="&lt;b>Manipulates bins:&lt;/b> {{bins}}"
                            app:trueString="yes" />

                        <org.wildstang.wildrank.androidv2.views.TemplatedTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="20sp"
                            app:falseString="no"
                            app:text="&lt;b>Manipulates litter:&lt;/b> {{litter}}"
                            app:trueString="yes" />

                        <org.wildstang.wildrank.androidv2.views.TemplatedTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="20sp"
                            app:text="&lt;b>Playing location:&lt;/b> {{pit-playing_location}}" />

                        <org.wildstang.wildrank.androidv2.views.TemplatedTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="20sp"
                            app:text="&lt;b>Max totes stack:&lt;/b> {{max_totes_stack}}" />

                        <org.wildstang.wildrank.androidv2.views.TemplatedTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="20sp"
                            app:text="&lt;b>Max cap with bin:&lt;/b> {{max_cap}}" />

                        <org.wildstang.wildrank.androidv2.views.TemplatedTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="20sp"
                            app:text="&lt;b>Stacks per match:&lt;/b> {{stacks_per_match}}" />

                        <org.wildstang.wildrank.androidv2.views.TemplatedTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="20sp"
                            app:text="&lt;b>Auto bins:&lt;/b> {{auto_bins}}" />

                        <org.wildstang.wildrank.androidv2.views.TemplatedTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="20sp"
                            app:text="&lt;b>Auto totes:&lt;/b> {{auto_totes}}" />

                        <org.wildstang.wildrank.androidv2.views.TemplatedTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="20sp"
                            app:text="&lt;b>Auto bins from step:&lt;/b> {{auto_step}}" />

                        <org.wildstang.wildrank.androidv2.views.TemplatedTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="20sp"
                            app:falseString="no"
                            app:text="&lt;b>Drives during auto:&lt;/b> {{auto_drives}}"
                            app:trueString="yes" />

                    </LinearLayout>
                </ScrollView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Notes"
                    android:textSize="40sp" />

                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/notes"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="20sp" />
                </ScrollView>
            </LinearLayout>

        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>